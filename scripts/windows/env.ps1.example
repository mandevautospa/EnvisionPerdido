# Copy this file to env.ps1 and fill in your secrets.
# This file is dot-sourced by the runner scripts before invoking Python.

# WordPress API
$env:WP_SITE_URL = "https://sandbox.envisionperdido.org"
$env:WP_USERNAME = "jmiller"
$env:WP_APP_PASSWORD = "<your_app_password_here>"

# Email SMTP
$env:SMTP_SERVER = "smtp.gmail.com"
$env:SMTP_PORT   = "587"
$env:SENDER_EMAIL = "you@example.com"
$env:EMAIL_PASSWORD = "<your_email_app_password_here>"
$env:RECIPIENT_EMAIL = "you@example.com"

# Automation options
$env:AUTO_UPLOAD = "true"      # set to "false" to disable automatic WordPress upload
$env:HEALTH_SEND_OK = "true"   # set to "false" to only email on failures
